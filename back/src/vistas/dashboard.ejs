<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <title>Dashboard - Productos</title>
  <style>
    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f0f2f5;
      margin: 0;
      display: flex;
      height: 100vh;
    }

    .sidebar {
      width: 220px;
      background-color: #2c3e50;
      color: white;
      padding: 2rem 1rem;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .sidebar h2 {
      font-size: 1.2rem;
      margin-bottom: 1rem;
    }

    .sidebar a,
    .sidebar form button {
      color: white;
      text-decoration: none;
      background: none;
      border: none;
      font-size: 1rem;
      cursor: pointer;
      padding: 0.5rem 0;
      text-align: left;
      width: 100%;
    }

    .sidebar a:hover,
    .sidebar form button:hover {
      background-color: #34495e;
    }

    .contenido {
      flex: 1;
      padding: 2rem;
      overflow-y: auto;
    }

    .contenido h1 {
      color: #2c3e50;
    }

    .productos {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-top: 2rem;
    }

    .card {
      background-color: white;
      padding: 1rem;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      position: relative;
    }

    .card img {
      width: 100%;
      height: 150px;
      object-fit: contain;
      border-radius: 5px;
      background-color: #f0f0f0;
      /* Opcional, para que se vea fondo si la imagen no ocupa todo */
    }

    .card h3 {
      margin: 0;
      color: #333;
    }

    .card .precio {
      font-weight: bold;
      color: #27ae60;
    }

    .acciones {
      margin-top: auto;
      display: flex;
      gap: 0.5rem;
      justify-content: space-between;
    }

    .acciones a,
    .acciones button {
      font-size: 0.9rem;
      padding: 0.3rem 0.6rem;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      text-decoration: none;
    }

    .acciones a {
      background-color: #3498db;
      color: white;
    }

    .acciones button {
      background-color: #e74c3c;
      color: white;
    }

    .acciones button.activar {
      background-color: #27ae60;
    }

    .card.inactivo {
      opacity: 0.5;
      filter: grayscale(1);
    }

    .inactivo-label {
      position: absolute;
      top: 10px;
      left: 10px;
      background-color: #e74c3c;
      color: white;
      padding: 0.2rem 0.5rem;
      font-size: 0.8rem;
      border-radius: 5px;
    }

    #modalEliminar {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.5);
      justify-content: center;
      align-items: center;
      z-index: 999;
    }

    #modalEliminar .modal-content {
      background-color: white;
      padding: 2rem;
      border-radius: 10px;
      text-align: center;
      width: 300px;
    }

    #modalEliminar button {
      margin: 0.5rem;
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    #modalEliminar .confirmar {
      background-color: #e74c3c;
      color: white;
    }

    #modalEliminar .cancelar {
      background-color: #7f8c8d;
      color: white;
    }
  </style>
</head>

<body>
  <aside class="sidebar">
    <h2>Hola, <%= usuario.email %>
    </h2>
    <a href="/productos/nuevo">âž• Agregar Producto</a>
    <a href="/usuarios/nuevo">ðŸ‘¤ Alta Usuario</a>
    <form action="/auth/logout" method="POST">
      <button type="submit">ðŸšª Cerrar SesiÃ³n</button>
    </form>
  </aside>

  <main class="contenido">
    <h1>Listado de Productos</h1>
    <section class="productos">
      <% if (productos && productos.length> 0) { %>
        <% productos.forEach(producto=> { %>
          <div class="card <%= !producto.activo ? 'inactivo' : '' %>" id="producto-<%= producto.id %>">
            <% if (!producto.activo) { %>
              <div class="inactivo-label">Producto inactivo</div>
              <% } %>
                <% if (producto.imagen) { %>
                  <img src="/uploads/<%= producto.imagen %>" alt="Imagen del producto" />
                  <% } else { %>
                    <img src="https://via.placeholder.com/250x150?text=Sin+imagen" alt="Sin imagen" />
                    <% } %>
                      <h3>
                        <%= producto.nombre %>
                      </h3>
                      <p><strong>CategorÃ­a:</strong>
                        <%= producto.categoria %>
                      </p>
                      <p class="precio">$<%= producto.precio %>
                      </p>
                      <div class="acciones">
                        <a href="/productos/editar/<%= producto.id %>">Editar</a>
                        <% if (producto.activo) { %>
                          <button onclick="mostrarModal('<%= producto.id %>', true)">Eliminar</button>
                          <% } else { %>
                            <button class="activar" onclick="mostrarModal('<%= producto.id %>', false)">Activar</button>
                            <% } %>
                      </div>
          </div>
          <% }) %>
            <% } else { %>
              <p>No hay productos disponibles.</p>
              <% } %>
    </section>
  </main>

  <!-- Modal compartido para eliminar/activar -->
  <div id="modalEliminar">
    <div class="modal-content">
      <p>Â¿EstÃ¡s seguro que deseas eliminar este producto?</p>
      <button class="confirmar" onclick="confirmarEliminar()">SÃ­, eliminar</button>
      <button class="cancelar" onclick="cerrarModal()">Cancelar</button>
    </div>
  </div>

  <script>
    let idProductoModal = null;
    let esEliminacion = true;

    function mostrarModal(id, eliminar = true) {
      idProductoModal = id;
      esEliminacion = eliminar;

      const texto = eliminar
        ? "Â¿EstÃ¡s seguro que deseas eliminar este producto?"
        : "Â¿Deseas activar este producto nuevamente?";

      const boton = document.querySelector("#modalEliminar .confirmar");
      boton.textContent = eliminar ? "SÃ­, eliminar" : "SÃ­, activar";

      document.querySelector("#modalEliminar p").textContent = texto;
      document.getElementById("modalEliminar").style.display = "flex";
    }

    function cerrarModal() {
      idProductoModal = null;
      document.getElementById("modalEliminar").style.display = "none";
    }

    async function confirmarEliminar() {
      if (!idProductoModal) return;

      try {
        const res = await fetch(`/productos/estado/${idProductoModal}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ activo: !esEliminacion })
        });

        const data = await res.json();

        if (res.ok) {
          const card = document.getElementById(`producto-${idProductoModal}`);
          const accionesDiv = card.querySelector('.acciones');

          if (esEliminacion) {
            card.classList.add('inactivo');
            accionesDiv.innerHTML = `
              <a href="/productos/editar/${idProductoModal}">Editar</a>
              <button class="activar" onclick="mostrarModal('${idProductoModal}', false)">Activar</button>
            `;
            const label = document.createElement('div');
            label.className = 'inactivo-label';
            label.textContent = 'Producto inactivo';
            card.appendChild(label);
          } else {
            card.classList.remove('inactivo');
            accionesDiv.innerHTML = `
              <a href="/productos/editar/${idProductoModal}">Editar</a>
              <button onclick="mostrarModal('${idProductoModal}', true)">Eliminar</button>
            `;
            const label = card.querySelector('.inactivo-label');
            if (label) label.remove();
          }
        } else {
          alert(data?.error || "No se pudo actualizar el estado del producto.");
        }
      } catch (error) {
        console.error(error);
        alert("Error de red al intentar actualizar.");
      } finally {
        cerrarModal();
      }
    }
  </script>
</body>

</html>